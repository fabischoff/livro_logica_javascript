{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/livro_logica_javascript/cap7/",
            "webRoot": "${workspaceFolder}",
            "pathMappings": [
                {
                    "url": "http://localhost",
                    "path": "/var/www/html"
                },
                {
                    "url": "http://localhost/livro_logica_javascript/cap7/",
                    "path": "${workspaceFolder}"
                }
            ]
        }
    ]
}